.post-wrap
  width: 100%
  height: 250px
  margin-bottom: 40px
  position: relative
  border-radius: 20px
  background: #fff
  display: flex
  box-shadow: 5px 5px 10px 3px rgba(0, 0, 0, 0.1)
  transition: transform 0.3s
  transition-timing-function: ease

  &:hover
    transition: transform 0.3s
    transition-timing-function: ease
    transform: rotate(1deg) scale(1.01)

    &:before
      transition: opacity 0.3s
      transition-timing-function: ease
      opacity: 1

  &:before
    content: ""
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border-radius: 20px
    box-shadow: 5px 5px 10px 3px rgba(0, 0, 0, 0.1)
    opacity: 0
    transition: opacity 0.3s
    transition-timing-function: ease


.post-info
  height: 100%
  padding: 20px
  overflow: hidden
  box-sizing: border-box
  font-family: FontAwesome

.post-comments-count
.post-meta
  display: flex
  justify-content: flex-end
  margin: 10px 0
  font-size: 0

  a
    font-size: 14px
    color: #777777

  .icon-calendar
    display: inline-block

    &:before
      content: "\f073"

  a:before,
  span:before
    margin-right: 5px

.post-top
.post-top-img
.post-top-text
.post-article
  width: 100%
  display: -webkit-box
  -webkit-box-orient: vertical
  -webkit-line-clamp: 3
  overflow: hidden
  line-height: 25px
  font-size: 15px
  color: #777777

.post-cover
  width: 40%
  position: relative
  overflow: hidden
  border-radius: $radius
  min-height: 95px
  background-color: #eee
  flex-shrink: 0
  border-top-left-radius: 20px
  border-bottom-left-radius: 20px
  clip-path: polygon(0 0, 92% 0%, 100% 100%, 0% 100%)

  img
    display: block
    opacity: 0
    transition: opacity 200ms ease-out
    position: absolute
    left: 0
    top: 0
    object-fit: cover
    width: 100%
    height: 100%

  img.lazyloaded
    opacity: 1

.post-title
  margin: 20px 0
  color: red
  font-size: 30px
  font-weight: bold
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  letter-spacing: 1px
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis