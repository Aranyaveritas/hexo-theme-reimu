.post-wrap
  width: 100%
  margin-bottom: 40px
  position: relative

.post-comments-count
.post-meta
  margin: $gutter 0px
  font-size: 0

  a
    border-radius: 20px
    padding: 10px 18px
    font-size: 14px
    display: inline-block
    margin-bottom: 5px
    margin-right: 10px

    .nexmoefont
      font-size: 14px


  a:before,
  i:before
    margin-right: 5px

.post-top
.post-top-img
.post-top-text
.post-cover
  width: 100%
  padding-bottom: 56.25%
  position: relative
  overflow: hidden
  border-radius: $radius
  min-height: 95px
  background-color: #eee

  img
    display: block
    opacity: 0
    transition: opacity 200ms ease-out
    position: absolute
    left: 0
    top: 0
    border-radius: $radius
    border: 1px solid #eee
    object-fit: cover
    width: 100%
    height: 100%

  img.lazyloaded
    opacity: 1

  h1
    color: #fff
    font-size: 2.5em
    font-weight: normal
    margin: 0
    position: absolute
    bottom: 0
    width: 100%
    box-sizing: border-box
    text-transform: none
    z-index: 1
    padding: $gutter

  h1:after
    background-image: -moz-linear-gradient(to top, rgba(16, 16, 16, 0.35) 25%, rgba(16, 16, 16, 0) 100%)
    background-image: -webkit-linear-gradient(to top, rgba(16, 16, 16, 0.35) 25%, rgba(16, 16, 16, 0) 100%)
    background-image: -ms-linear-gradient(to top, rgba(16, 16, 16, 0.35) 25%, rgba(16, 16, 16, 0) 100%)
    background-image: linear-gradient(to top, rgba(16, 16, 16, 0.35) 25%, rgba(16, 16, 16, 0) 100%)
    -moz-pointer-events: none
    -webkit-pointer-events: none
    -ms-pointer-events: none
    pointer-events: none
    background-size: cover
    content: ''
    display: block
    height: 100%
    left: 0
    position: absolute
    bottom: 0
    width: 100%
    z-index: -1

.icon-calendar-fill
  width: 100%