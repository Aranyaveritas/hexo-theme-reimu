.popup
  display: none
  position: fixed
  top: 10%
  left: 50%
  width: 700px
  height: 80%
  margin-left: -350px
  padding: 3px 0 0 10px
  background: color-wrap
  color: color-grey
  z-index: 9999
  border-radius: post-radius

  @media mg-normal
    padding: 5px
    top: 0
    left: 0
    margin: 0
    width: 100%
    height: 100%
    border-radius: 0

.popoverlay
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: 2080
  background-color: rgba(0, 0, 0, 0.3)

.algolia-popup
  overflow: hidden
  padding: 0

  .popup-btn-close
    position: absolute
    right: 15px
    color: red-1
    font-size: 20px
    font-weight: bold
    text-transform: uppercase
    cursor: pointer
    padding-left: 15px
    top: 10px

    &:before
      content: "\f057"

.algolia-search
  padding: 10px 15px 5px
  max-height: 50px
  border-bottom: 1px solid #ccc
  background: #f5f5f5
  border-top-left-radius: 5px
  border-top-right-radius: 5px

.algolia-search-input-icon
  display: inline-block
  width: 20px
  font-size: 18px

  &:before
    content: "\f002"

.algolia-search-input
  display: inline-block
  width: calc(90% - 20px)

  input
    padding: 5px 0
    width: 100%
    outline: none
    border: none
    background: transparent

.algolia-powered
  float: right

  img
    display: inline-block
    height: 18px
    vertical-align: middle

.algolia-results
  position: relative
  overflow: auto
  padding: 10px 30px
  box-sizing: border-box
  height: calc(100% - 50px)

  hr
    margin: 10px 0

  em
    font-weight: bold
    margin: 0
    padding: 0 2px
    color: red-1

#algolia-hits
  margin-top: 10px
  margin-left: 30px

.algolia-hit-item-link
  display: block
  text-decoration: none
  color: red-2
  margin-left: 15px
  padding: 12px 0

  &:before
    content: ""
    width: 6px
    height: 15px
    background: rgba(255, 0, 0, 0.75)
    display: inline-block
    vertical-align: middle
    margin-top: -2px
    margin-right: 11px
    margin-left: -25px
    box-shadow: 0 2px 12px rgba(255, 78, 106, 0.55)
    opacity: 0.5
    transition: all 0.2s ease

  &:hover
    &:before
      width: 6px
      height: 6px
      border-radius: 50%
      opacity: 1
      transition: all 0.2s ease

.algolia-pagination
  margin: 10px auto
  background: color-wrap
  border-radius: post-radius
  text-align: center
  color: color-grey
  overflow: hidden

  a
    padding: 10px 15px
    color: color-grey
    text-decoration: none
    transition: background 0.2s ease

    &:hover
      background: red-2
      transition: background 0.2s ease
      color: #fff

  .pagination-item
    display: inline-block

  .page-number
    display: inline-block
    border-radius: post-radius
    margin: 5px 5px

  .current
    .page-number
      color: white
      background: red-1
      font-weight: bold
      box-shadow: 0 2px 6px rgba(255, 78, 106, 0.55)

.ais-pagination--item__previous
  a
    &:before
      content: "\f104"

.ais-pagination--item__next
  a
    &:before
      content: "\f105"