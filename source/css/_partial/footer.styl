#footer
  background: linear-gradient(to top, color-footer-background 50%, transparent)
  display: flex
  justify-content: center
  flex-direction: column
  margin-top: auto
  padding: 80px 0 20px 0
  color: color-grey

  &:hover
    .footer-line
      transition: opacity 0.5s ease
      opacity: 0.8

  a
    color: color-link
    text-decoration: none

    &:hover
      text-decoration: underline

.footer-line
  margin-top: 20px
  opacity: 0.5
  width: 100%
  height: 12px
  background-image: linear-gradient(to left, rgba(255, 0, 0, 0.75) 50%, transparent 0%)
  background-size: 150px 15px
  background-repeat: repeat-x
  transition: opacity 0.5s

#footer-info
  line-height: line-height
  font-size: 0.85em
  width: 100%

  div
    margin: 5px 0
    display: flex
    justify-content: center

.icon-copyright
  &:before
    content: "\f1f9"

.icon-brush
  margin: 0 5px

  &:before
    content: "\f1fc"

.icon-coffee
  margin: 0 5px

  &:before
    content: "\f0f4"