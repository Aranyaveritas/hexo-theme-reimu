<% if (post.prev || post.next){ %>
    <nav id="article-nav">
        <% if (post.prev){ %>
            <div class="article-nav-link-wrap article-nav-link-left">
                <img data-src="/css/images/banner.jpg" data-sizes="auto" alt="<%= post.title %>" class="lazyload">
                <a href="<%- url_for(post.prev.path) %>"></a>
                <div class="article-nav-caption"><%= __('newer') %></div>
                <div class="article-nav-title">
                    <% if (post.prev.title){ %>
                        <%= post.prev.title %>
                    <% } else { %>
                        (no title)
                    <% } %>
                </div>
            </div>
        <% } %>
        <% if (post.next){ %>
            <div class="article-nav-link-wrap article-nav-link-right">
                <img data-src="/css/images/banner.jpg" data-sizes="auto" alt="<%= post.title %>" class="lazyload">
                <a href="<%- url_for(post.next.path) %>"></a>
                <div class="article-nav-caption"><%= __('older') %></div>
                <div class="article-nav-title">
                    <% if (post.next.title){ %>
                        <%= post.next.title %>
                    <% } else { %>
                        (no title)
                    <% } %>
                </div>
            </div>
        <% } %>
    </nav>
<% } %>