<aside id="sidebar">
    <div class="sidebar-wrap wow fadeInRight <% if (is_post()) { %>wrap-sticky<% } %>">
        <% if (is_post()) { %>
            <%- partial('sidebar/toc-sidebar') %>
        <% } else { %>
            <%- partial('sidebar/common-sidebar') %>
        <% } %>
    </div>
    <% if (!is_post()) { %>
        <% theme.widgets.forEach(function(widget){ %>
            <%- partial('_widget/' + widget) %>
        <% }) %>
    <% } %>
</aside>
