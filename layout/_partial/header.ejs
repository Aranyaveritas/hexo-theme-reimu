<header id="header">
    <div id="banner"></div>
    <div id="header-outer" class="outer">
        <div id="header-title" class="inner">
            <h1 id="logo-wrap">
                <% if (post.type == '404') { %>
                    <a href="/" id="logo">4 0 4 (ﾟ⊿ﾟ)ﾂ</a>
                <% } else { %>
                    <% if (post.title){ %>
                        <a href="<%- url_for() %>" id="logo"><%= post.title %></a>
                    <% }else if(is_archive()){ %>
                        <a href="<%- url_for() %>" id="logo"><%- __('archives') %></a>
                    <% }else{ %>
                        <a href="<%- url_for() %>" id="logo"><%= config.title %></a>
                    <% } %>
                <% } %>
            </h1>
            <% if (post.type == 404) { %>
                <h2 id="subtitle-wrap">
                    <a href="/" id="subtitle">满 身 疮 痍</a>
                </h2>
            <% }else if ((theme.subtitle || config.subtitle) && !(post.title) && !is_archive()){ %>
                <h2 id="subtitle-wrap">
                    <a href="<%- url_for() %>" id="subtitle"><%= theme.subtitle || config.subtitle %></a>
                </h2>
            <% } %>
        </div>
        <div id="header-inner">
            <nav id="main-nav">
                <a id="main-nav-toggle" class="nav-icon"></a>
                <% for (var i in theme.menu){ %>
                    <span class="main-nav-link-wrap">
                        <span class="main-nav-icon"></span>
                        <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= __(i) %></a>
                    </span>
                <% } %>
            </nav>
            <nav id="sub-nav">
                <% if (theme.rss){ %>
                    <a id="nav-rss-link" class="nav-icon" href="<%- url_for(theme.rss) %>"
                       title="<%= __('rss_feed') %>"></a>
                <% } %>
                <a id="nav-search-btn" class="nav-icon" title="<%= __('search') %>"></a>
            </nav>
            <div id="search-form-wrap">
                <%- search_form({button: '&#xF002;', text: __('search')}) %>
            </div>
        </div>
    </div>
</header>
  